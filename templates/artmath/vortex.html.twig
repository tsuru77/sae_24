{% extends 'base.html.twig' %}

{% block title %}Art mathématique{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">

<br>

<h1>Paramètres de la figure vortex :</h1>

    <form method="post" action="/calcul_vortex">
        <div>
            <label for="cerle1_rayon" class="form-label">Taille cercle</label>
                <input type="range" class="form-range" min="1" max="400" step="5" id="cercle1_rayon" name="cercle1_rayon">
        </div>

        <div>
            <label for="espaces" class="form-label">espaces</label>
                <input type="range" class="form-range" min="10" max="1000" step="50" id="espaces" name="espaces">
        </div>

        <div>
            <label for="traits" class="form-label">traits</label>
                <input type="range" class="form-range" min="10" max="150" step="5" id="traits" name="traits">
        </div>

        <div>
            <label for="angle" class="form-label">angle</label>
                <input type="range" class="form-range" min="15" max="150" step="7" id="angle" name="angle">
        </div>
        

        <div>
            <button type="submit" class="btn btn-primary" name="generer" value="1">Calculer</button>
            <button type="submit" class="btn btn-danger" name="printer" value="1">Imprimer</button>
        </div>
    </form>


    <br>

    <h1> Résultat : </h1>
    <img src="{{figure}}" width="100%">





</div>
{% endblock %}
